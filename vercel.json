{
  "version": 2,
  "buildCommand": "npm run build && pip install -r requirements.txt && python ml/train_model.py",
  "framework": "nextjs",
  "routes": [
    {
      "src": "/api/python/(.*)",
      "dest": "/api/python/$1"
    }
  ],
  "functions": {
    "api/python/**/*.py": {
      "runtime": "python3.11"
    }
  },
  "env": {
    "MODEL_PATH": "ml/models",
    "DATA_PATH": "data"
  }
}
